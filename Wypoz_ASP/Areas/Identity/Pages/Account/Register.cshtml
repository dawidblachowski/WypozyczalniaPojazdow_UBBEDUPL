@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="hello world" aria-required="true" placeholder="Imię" />
                <label asp-for="Input.FirstName">Imię</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" autocomplete="hello world" aria-required="true" placeholder="Nazwisko" />
                <label asp-for="Input.LastName">Nazwisko</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.AddressStreet" class="form-control" autocomplete="on" aria-required="true" placeholder="Ulica" />
                <label asp-for="Input.AddressStreet">Ulica</label>
                <span asp-validation-for="Input.AddressStreet" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.AddressCity" class="form-control" autocomplete="on" aria-required="true" placeholder="Miasto" />
                <label asp-for="Input.AddressCity">Miasto</label>
                <span asp-validation-for="Input.AddressCity" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.AddressZipCode" class="form-control" autocomplete="on" aria-required="true" placeholder="Kod pocztowy" />
                <label asp-for="Input.AddressZipCode">Kod pocztowy</label>
                <span asp-validation-for="Input.AddressZipCode" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.AddressHouseNumber" class="form-control" autocomplete="on" aria-required="true" placeholder="Numer Domu" />
                <label asp-for="Input.AddressHouseNumber">Numer Domu</label>
                <span asp-validation-for="Input.AddressHouseNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.AddressApartmentNumber" class="form-control" autocomplete="on" aria-required="true" placeholder="Numer Mieszkania" />
                <label asp-for="Input.AddressApartmentNumber">Numer Mieszkania</label>
                <span asp-validation-for="Input.AddressApartmentNumber" class="text-danger"></span>
            </div>


            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
